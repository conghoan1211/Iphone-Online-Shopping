<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>controller.cart.CheckoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowCheckOutServlet</servlet-name>
        <servlet-class>controller.cart.ShowCheckOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbackServlet</servlet-name>
        <servlet-class>controller.profile.FeedbackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderStatusServlet</servlet-name>
        <servlet-class>controller.profile.OrderStatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerOrderServlet</servlet-name>
        <servlet-class>controller.manager.ManagerOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowCheckOutServlet</servlet-name>
        <url-pattern>/showcheckout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackServlet</servlet-name>
        <url-pattern>/feedback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderStatusServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerOrderServlet</servlet-name>
        <url-pattern>/manager/order</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
